<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="PendingInvoicesPopup">
        <div class="popup">
            <div class="popup-title">Facturas Pendientes</div>
            <div class="popup-content">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Factura</th>
                            <th>Fecha</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="invoices" t-as="invoice" t-key="invoice.id">
                            <tr>
                                <td><t t-esc="invoice.id"/></td>
                                <td><t t-esc="invoice.name"/></td>
                                <td><t t-esc="invoice.date"/></td>
                                <td><t t-esc="invoice.balance.toFixed(2)"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="popup-footer">
                <button class="btn btn-primary" t-on-click="trigger('close-popup')">Cerrar</button>
            </div>
        </div>
    </t>
</templates>